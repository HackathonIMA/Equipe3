<p id="notice"><%= notice %></p>

<h1>Listing Shares</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Category</th>
      <th>School</th>
      <th>Date</th>
      <th>Icon</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shares.each do |share| %>
      <tr>
        <td><%= share.title %></td>
        <td><%= share.description %></td>
        <td><%= share.category %></td>
        <td><%= share.school %></td>
        <td><%= share.date %></td>
        <td><%= share.icon %></td>
        <td><%= link_to 'Show', share %></td>
        <td><%= link_to 'Edit', edit_share_path(share) %></td>
        <td><%= link_to 'Destroy', share, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

